<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjy.mapper.TestMapper">
    <insert id="add" parameterType="java.lang.Integer">
        insert into t_test values (default ,'asd',#{number},now())
    </insert>
    <select id="getType" resultType="com.zjy.entity.TypeListEntity">
        SELECT `type` `type` FROM t_test GROUP BY type
    </select>
    <select id="getResult" parameterType="list"  resultType="com.zjy.entity.TestEntity">
        SELECT a.id id,a.name `name`,a.type type,a.create_time createTime FROM (
            <foreach collection="list" item="item" index="index" separator=" UNION ALL ">
                (SELECT * FROM t_test WHERE type=#{item.type} ORDER BY create_time desc LIMIT 4)
            </foreach>
        ) a
    </select>
</mapper>